{
  "info": {
    "name": "FPH CRM API",
    "description": "Personal Contact Relationship Manager API - Test all contact endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "12345"
  },
  "item": [
    {
      "name": "Contacts",
      "item": [
        {
          "name": "Get All Contacts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/contacts",
              "host": ["{{base_url}}"],
              "path": ["api", "contacts"]
            },
            "description": "Retrieve all contacts, sorted by name. Includes tags."
          },
          "response": []
        },
        {
          "name": "Get Contact by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/contacts/{{contact_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "contacts", "{{contact_id}}"]
            },
            "description": "Get a single contact with all related data (interactions, reminders, notes, tags)"
          },
          "response": []
        },
        {
          "name": "Create Contact",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"phone\": \"+1 555-1234\",\n  \"socialMedia\": {\n    \"twitter\": \"@johndoe\",\n    \"linkedin\": \"johndoe\",\n    \"github\": \"johndoe\"\n  },\n  \"company\": \"Acme Corp\",\n  \"jobTitle\": \"Software Engineer\",\n  \"address\": \"123 Main St, San Francisco, CA\",\n  \"birthday\": \"1990-01-15T00:00:00.000Z\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/contacts",
              "host": ["{{base_url}}"],
              "path": ["api", "contacts"]
            },
            "description": "Create a new contact. firstName and lastName are required."
          },
          "response": []
        },
        {
          "name": "Update Contact",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newemail@example.com\",\n  \"phone\": \"+1 555-9999\",\n  \"socialMedia\": {\n    \"twitter\": \"@johndoe_new\",\n    \"linkedin\": \"johndoe-updated\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/contacts/{{contact_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "contacts", "{{contact_id}}"]
            },
            "description": "Update an existing contact. All fields are optional (partial update)."
          },
          "response": []
        },
        {
          "name": "Delete Contact",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/contacts/{{contact_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "contacts", "{{contact_id}}"]
            },
            "description": "Delete a contact and all related data (interactions, reminders, notes). Tags are preserved."
          },
          "response": []
        },
        {
          "name": "Search Contacts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/contacts/search?q=john",
              "host": ["{{base_url}}"],
              "path": ["api", "contacts", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "john",
                  "description": "Search query (searches name, email, twitter, company)"
                }
              ]
            },
            "description": "Search contacts by name, email, socialMedia, or company (case-insensitive)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Interactions",
      "item": [
        {
          "name": "Get Interactions for Contact",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/contacts/{{contact_id}}/interactions",
              "host": ["{{base_url}}"],
              "path": ["api", "contacts", "{{contact_id}}", "interactions"],
              "query": [
                {
                  "key": "type",
                  "value": "MEETING",
                  "description": "Filter by interaction type (CALL, MEETING, EMAIL, TEXT, COFFEE, LUNCH, EVENT, OTHER)",
                  "disabled": true
                },
                {
                  "key": "startDate",
                  "value": "2025-01-01T00:00:00.000Z",
                  "description": "Filter interactions on or after this date",
                  "disabled": true
                },
                {
                  "key": "endDate",
                  "value": "2025-12-31T23:59:59.000Z",
                  "description": "Filter interactions on or before this date",
                  "disabled": true
                }
              ]
            },
            "description": "Get all interactions for a specific contact. Supports optional filtering by type and date range."
          },
          "response": []
        },
